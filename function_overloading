#include <iostream>
using namespace std;

class Calculator {
public:
    int add(int a, int b) {
        return a + b;
    }
    double add(double a, double b) {
        return a + b;
    }
    int add(int a, int b, int c) {
        return a + b + c;
    }
};

int main() {
    Calculator c;
    cout << "Sum of two integers: " << c.add(5, 10) << endl;
    cout << "Sum of two doubles: " << c.add(3.5, 2.5) << endl;
    cout << "Sum of three integers: " << c.add(1, 2, 3) << endl;
    return 0;
}
