#include <iostream>
using namespace std;
int main() {
    int * ptr;
    
    int arr[4]={1,2,3,4};
    ptr=arr;
    for(int i=0;i<4;i++){
        cout<<"the value of arr is["<<i<<"]=";
        cout<<*ptr<<endl;
         cout<<"the address of arr is["<<i<<"]=";
        cout<<ptr<<endl;
        ptr++;
        
    }
    

    return 0;
    

}
