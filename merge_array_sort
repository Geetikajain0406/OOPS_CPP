#include <iostream>
#include<algorithm>
using namespace std;

int main() {
    int arr[4] = {7, 1, 5, 3};
    int arr1[4] = {8, 4, 6, 2};
int n=4,m=4,k=5;
int total=m+n;
int merge[20];
for(int i=0;i<m;i++){
    merge[i]=arr[i];
}
for(int j=0;j<n;j++){
    merge[m+n]=arr1[j];
}
sort(merge,merge+total);
cout<<"the kTh smallest element is :"<<merge[k-1]<<endl;
    return 0;
}
