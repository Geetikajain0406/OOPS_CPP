#include <iostream>
using namespace std;
template <class t>
class ary{
    int size;
    t *arr;
    public:
    ary(int s,t a[]){
        size=s;
        arr=new t(size);
       for(int i=0;i<size;i++){
           arr[i]=a[i];
       }
    }
    void display(){
        cout<<"the array is:"<<endl;
        for(int i=0;i<size;i++){
            cout<<arr[i]<<" ";
        }
        cout<<endl;
    }
    t sum(){
        t total=0;
        for(int i=0;i<size;i++){
            total+=arr[i];
        }
        return total;
    }
};
int main() {
 int arr[3]={1,2,3};
double ar[3]={1.2,2.4,3.5};
 ary<int> a (3,arr);
 a.display();
 cout<<"the sum is:"<<a.sum()<<endl;
 ary<double> a1 (3,ar);
 a1.display();
    return 0;
}

