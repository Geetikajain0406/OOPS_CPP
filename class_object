#include <iostream>
using namespace std;
class test{
    public:
    int num1=10;
    int num2=20;
    void show(){
        cout<<"the num 1 is"<<num1<<endl;
        cout<<"the num 2 is"<<num2<<endl;

    }
    void sum(){
        int total=0;
        total=num1+num2;
        cout<<"the sum is:"<<total<<endl;
    }
};

int main() {
    test o1,o2;
    o1.show();
    o2.num1=6;
     o2.num2=3;
     o2.sum();
    
    
    
    return 0;
    
    
    
    
    
    
}
