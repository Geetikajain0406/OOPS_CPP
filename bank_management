#include<iostream>
#include<string>
using namespace std;
class bank{

    string name;
    int acc;
    string type;
    float amt;
public:
    void assigning(string depname,int ac,string ty,float am){
    name=depname;
    acc=ac;
    type=ty;
    amt=am;}
    void deposit(float amount){
        amt += amount;
        cout<<"the deposit has been done in acc amt"<<amt<<endl;
    }
    void withdraw(float amount){
    if(amt<amount){
        cout<<"no enough money"<<endl;
    }
    else{
        amt-=amount;
        cout<<"the amount after withdrawl is:"<<amt<<endl;
    }
    }
    void display(){
    cout<<"name:"<<name<<endl;
    cout<<"the balance is:"<<amt<<endl;}
};
int main(){
    bank b;
    b.assigning("geetika",123,"saving",200000);
    b.deposit(2000);
    b.withdraw(2000);
    b.display();

return 0;}
