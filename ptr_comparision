#include <iostream>
using namespace std;
int main() {
    const int max=4;
int arr[4]={1,2,3,4};
int *ptr;
ptr=arr;
int i=0;
while(ptr<=&arr[max-1]){
    cout<<"the address of the ["<<i<<"]=";
 cout << ptr << endl;
cout << "Value of var[" << i << "] = ";
cout << *ptr << endl;
ptr++;
i++;
}
    return 0;
    

}
