#include <iostream>
using namespace std;

class Base {};
class Derived : public Base {};

int main() {
    Base *p = new Derived;   // ✅ Allowed (Upcasting)
    // Derived *q = new Base; // ❌ Not Allowed (Downcasting)
    Derived *q = dynamic_cast<Derived*>(p); // ✅ Safe Downcasting using dynamic_cast

    if (q != NULL)
        cout << "Casting successful";
    else
        cout << "Casting failed";

    return 0;
}
