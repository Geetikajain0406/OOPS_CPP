#include<iostream>
#include<cmath>
#include<string>
using namespace std;
int main(){
  int arr[6];
  cout<<"enter 6 values for array";
  for(int i=0;i<6;i++){
    cin>>arr[i];
  }
  cout<<"the rev array is"<<endl;
  for(int i=5;i>=0;i--){

    cout<<arr[i]<<endl;
  }



    return 0;
}



