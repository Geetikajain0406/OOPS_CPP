#include<iostream>
#include<cmath>
#include<string>
using namespace std;
int main(){
    float a,b,c,d;
    //string add,sub,mul,div;
    string op ;
    cout<<"enter your operator";
    cin>>op;
    cout<<"enter 4 values for a,b,c,d"<<endl;
    cin>>a>>b>>c>>d;
    if (op=="add"){
            cout<<(a*d + b*c) / (b*d);
    }
    else if (op=="sub"){
        cout<< (a*d - b*c) / (b*d);
    }
    else if (op=="mul"){
cout<<(a*c) / (b*d);
    }
        else if (op=="div"){
cout<<(a*d) / (b*c);
        }
        else{
        cout<<"enter correct operator"<<endl;}
return 0;}

