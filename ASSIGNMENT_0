#include<iostream>
#include<cmath>
using namespace std;
int main(){
    double year;
   double rate,amt,total,compound;
    cout<<"enter year";
    cin>>year;
    cout<<"enter rate"<<endl;
    cin>>rate;
    cout<<"enter principal rate"<<endl;
    cin>>amt;
    total=amt*pow((1+rate/100),year);
    compound=total-amt;
    cout<<"the compound interest:"<<compound;


return 0;}

