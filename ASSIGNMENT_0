#include<iostream>
#include<cmath>
#include<string>
using namespace std;
int main(){
    float a,b,c;
    float sum,de;
    cout<<"enter 3 values for a,b,c"<<endl;
    cin>>a>>b>>c;
if (a>b && a>c){
    cout<<"a is largest";
}
else if(a<b && b>c){
    cout<<"b is largest";
}
else{
    cout<<"c is largest";
}
    return 0;
}


Ans 5
#include<iostream>
#include<cmath>
#include<string>
using namespace std;
int main(){
  int arr[8];
  cout<<"enter 8 values for array";
  for(int i=0;i<8;i++){
    cin>>arr[i];
  }
  int h=0;
  int s=0;
  for(int i=0;i<8;i++){
   if(arr[i]>h){
    s=h;
    h=arr[i];
   }

   if(s<arr[i]&&arr[i]!=h){
    s=arr[i];
   }

  }
  cout<<"the second largest in array is:"<<s<<endl;



    return 0;
}


