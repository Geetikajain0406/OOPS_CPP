Ans 7

#include<iostream>
#include<cmath>
#include<string>
#include<algorithm>
using namespace std;
int missing(int arr[]){
int n=8;
 sort(arr,arr+n);
 int smallest=1;
for(int i=0;i<n;i++){
    if(arr[i]==smallest)
       smallest++;

}
    return smallest;
}
int main(){
int arr[8]={ 2, 3, -7, 6, 8, 1, -10, 15 };
 int miss= missing(arr);
 cout<<miss;

    return 0;
}

