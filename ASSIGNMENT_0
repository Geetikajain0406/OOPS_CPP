    float a,b,c,d;
    cout<<"enter 4 values for a,b,c,d"<<endl;
    cin>>a>>b>>c>>d;
    cout<<"the x value is"<<a / (b -c) + d<<endl;

    return 0;
}


#include<iostream>
#include<cmath>
#include<string>
using namespace std;
int main(){
    float a,b,c,d;
    float sum,de;
    cout<<"enter 4 values for a,b,c,d"<<endl;
    cin>>a>>b>>c>>d;
    de=(b -c) + d;
    sum=a / de;
    if (de == 0){
        cout<<"cannot divide by zero"<<endl;
    }
    else{
    cout<<"the x value is"<<sum<<endl;
    }

    return 0;
}


