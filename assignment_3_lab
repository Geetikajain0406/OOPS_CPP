#include<iostream>
using namespace std;
class test{
    int id;
    string name;
    string branch;
    float cgpa;
public:
    test(int i,string n,string b,float c){
    id=i;
    name=n;
    branch=b;
    cgpa=c;}
     test(int i,string n,float c){
    id=i;
    name=n;
    branch="cse";
    cgpa=c;}
     test(){
    id=1;
    name="unknown";
    branch="cse";
    cgpa=6;}
    void set_id(int i){
     id=i;
    }
    void set_name(string n){
    name=n;}
      void set_branch(string b){
      branch=b;}
      void set_cgpa(float c){
      cgpa=c;}
      void print(){
      cout<<"the student info is: "<<id
      <<endl<<"name:"<<name<<endl<<"branch:"<<branch
      <<endl<<"cgpa is:"<<cgpa<<endl;}
};
int main(){
    test t1;
    t1.print();
    test t2(1,"geet",9);
    test t3(1,"geetika","it",10);
     t2.print();
        t3.print();
return 0;}


